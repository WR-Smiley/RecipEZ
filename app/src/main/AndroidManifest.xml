<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipEZ"
        tools:targetApi="31">
        <activity
            android:name=".activities.NewUser"
            android:exported="false" />
        <activity
            android:name=".activities.ViewRecipe"
            android:exported="false"
            android:parentActivityName=".activities.Homepage" />
        <activity
            android:name=".activities.AddRecipe"
            android:exported="false"
            android:parentActivityName=".activities.Homepage" />
        <activity
            android:name=".activities.AddIngredient"
            android:exported="false"
            android:parentActivityName=".activities.AddRecipe" />
        <activity
            android:name=".activities.Homepage"
            android:exported="false" />
        <activity
            android:name=".activities.EditRecipe"
            android:exported="false"
            android:parentActivityName=".activities.ViewRecipe" />
        <activity
            android:name=".activities.EditIngredient"
            android:exported="false"
            android:parentActivityName=".activities.EditRecipe" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/welcome_to_recipez_recipe_book">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>